@model HotelMVC.Models.Room

@{
    ViewData["Title"] = "Edit Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title">Edit Room</h1>
        </div>
        <div class="card-body">
            <h4 class="text-secondary">Room</h4>
            <hr />
            <div class="row" style="font-size:15px;">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="RoomId" class="control-label font-weight-bold"></label>
                            <input asp-for="RoomId" class="form-control border-info" readonly />
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control border-info" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label font-weight-bold"></label>
                            <input asp-for="Price" class="form-control border-info" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageURL" class="control-label font-weight-bold"></label>
                            <input asp-for="ImageURL" class="form-control border-info" type="text" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label font-weight-bold"></label>
                            <input asp-for="Category" class="form-control border-info" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Type" class="control-label font-weight-bold"></label>
                            <input asp-for="Type" class="form-control border-info" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Brand" class="control-label font-weight-bold"></label>
                            <input asp-for="Brand" class="form-control border-info" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-success btn-block" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
