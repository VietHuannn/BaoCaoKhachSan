@model HotelMVC.Models.Room

@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="font-size:20px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h1 class="card-title">Room Details</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Model.ImageURL" class="img-fluid rounded" alt="@Model.Name" />
                </div>
                <div class="col-md-6">
                    <h4 class="card-title mt-3"><b>@Model.Name</b></h4>
                    <p class="card-text"><strong>@Model.Price.ToString("N0") VND</strong></p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                    <p class="card-text"><strong>Type:</strong> @Model.Type</p>
                    <p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.RoomId })" class="btn btn-success"><i class="fa fa-edit"></i> Edit</a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
