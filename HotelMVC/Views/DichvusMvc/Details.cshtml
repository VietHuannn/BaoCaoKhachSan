@model HotelMVC.Models.Dichvu

@{
    ViewData["Title"] = "Dichvu Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="font-size:20px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title">Dichvu Details</h1>
        </div>
        <div class="card-body">
            <h3 class="card-title text-primary">@Model.Name</h3>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><strong>@Model.Price.ToString("N0") VND</strong></p>
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Edit", new { id = Model.DichvuId })" class="btn btn-success"><i class="fa fa-edit"></i> Edit</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>
