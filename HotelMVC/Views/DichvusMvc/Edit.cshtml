@model HotelMVC.Models.Dichvu

@{
    ViewData["Title"] = "Edit Dichvu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title">Edit Dichvu</h1>
        </div>
        <div class="card-body">
            <h4 class="text-secondary"> Dịch vụ</h4>
            <hr />
            <div class="row" style="font-size:15px;">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="DichvuId" class="control-label font-weight-bold"></label>
                            <input asp-for="DichvuId" class="form-control border-info" readonly />
                            <span asp-validation-for="DichvuId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control border-info" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label font-weight-bold"></label>
                            <textarea asp-for="Description" class="form-control border-info"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label font-weight-bold"></label>
                            <input asp-for="Price" class="form-control border-info" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-success btn-block" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
