@model HotelMVC.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title">Edit Customer</h1>
        </div>
        <div class="card-body">
            <h4 class="text-secondary">Customer</h4>
            <hr />
            <div class="row" style="font-size:15px;">
                <div class="col-md-6">
                    <form asp-controller="CustomersMvc" asp-action="Edit" method="post">
                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label font-weight-bold"></label>
                            <input asp-for="CustomerId" class="form-control border-info" readonly />
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control border-info" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label font-weight-bold"></label>
                            <input asp-for="Email" class="form-control border-info" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label font-weight-bold"></label>
                            <input asp-for="Phone" class="form-control border-info" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-success btn-block" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
